<%= notice %>

<div class="container">
  <div class="row">
    <div class="col-md-3">

    <%= render 'list', book: @book_new, user: @user %>


    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(64,73.5) %>
              <br>
              <%= link_to user_path(@user.id) do %>
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit",edit_book_path, class: "btn btn-sm btn-success edit_book_47834" %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy" , book_path(@book.id), method: :delete, "data-confirm" => "are you sure", class: "btn btn-sm btn-danger destroy_book_47834" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
